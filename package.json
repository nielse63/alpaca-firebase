{
  "name": "alpaca-firebase",
  "version": "1.0.0",
  "description": "Algotrading bot example using TypeScript",
  "main": "functions/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "ci": ".bin/ci",
    "test:old": "dotenvx run --env-file=.env.test -- jest",
    "test": "jest --passWithNoTests",
    "prepare": "husky || true",
    "lint": "eslint --fix --cache . && prettier --write --cache .",
    "serve": "firebase serve",
    "deploy": "firebase deploy",
    "build": "tsc --allowJs --emitDeclarationOnly"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielse63/alpaca-firebase.git"
  },
  "keywords": [],
  "author": "Erik Nielsen <erik@312development.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nielse63/alpaca-firebase/issues"
  },
  "homepage": "https://github.com/nielse63/alpaca-firebase#readme",
  "engines": {
    "node": ">=22.5.1"
  },
  "workspaces": [
    "./functions",
    "./packages/*"
  ],
  "dependencies": {
    "dotenv": "^16.4.5",
    "firebase": "^10.12.4"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.6.4",
    "@nielse63/copy-env": "^1.1.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-jest-extended": "^2.4.0",
    "eslint-plugin-monorepo": "^0.3.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.2",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{json,md,yml}": "prettier --write --cache",
    "*.js": [
      "eslint --fix --cache",
      "prettier --write --cache"
    ],
    "packages/**/*.{json,js}": ".bin/package-doctor"
  }
}
