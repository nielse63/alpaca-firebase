{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "hooks": {
    "before:init": [
      ".bin/sort-deps",
      "npm run lint",
      "npm test",
      "npm run build"
    ]
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}"
  },
  "github": {
    "release": true
  }
}
